{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "outDir": "lib",
    "declaration": true,
    "sourceMap": false,
    "declarationMap": false
  },
  "include": [
    "src"
  ],
  "exclude": [
    "./src/stories/*",
    "./src/__tests__/*",
    "./src/setupTests.ts"
  ]
}